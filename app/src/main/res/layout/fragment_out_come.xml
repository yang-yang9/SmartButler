<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yangyang.bookkeeping.fragment.OutComeFragment"
    android:background="@color/gray_f3f3f3">

    <RelativeLayout
        android:id="@+id/rl_frag_record_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:padding="10dp">
        <ImageView
            android:id="@+id/iv_frag_record"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/ic_qita_fs"/>
        <TextView
            android:id="@+id/tv_frag_record_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="其他"
            android:layout_toRightOf="@id/iv_frag_record"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:id="@+id/et_frag_record_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:inputType="number"
            android:background="@color/color_white"/>
    </RelativeLayout>
    <View
        android:id="@+id/line1_frag_record"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rl_frag_record_top"
        android:background="@color/gray_f3f3f3"/>

    <GridView
        android:id="@+id/gv_frag_record"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/line1_frag_record"
        android:background="@color/color_white"
        android:numColumns="5"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"/>

    <android.inputmethodservice.KeyboardView
        android:id="@+id/keyboard_frag_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:keyBackground="@drawable/btn_keyboard_key"
        android:keyTextColor="@color/color_black"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingTop="1dp"
        android:layout_alignParentBottom="true"
        android:shadowColor="@color/color_white"
        android:shadowRadius="0.0"
        android:background="@color/color_white"/>
    <!--android:keyBackground="@color/gray_f3f3f3"-->

    <RelativeLayout
        android:layout_above="@id/keyboard_frag_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white">
        <TextView
            android:id="@+id/tv_frag_record_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020年10月30日 18:49"
            android:layout_alignParentRight="true"
            android:padding="10dp"/>
        <TextView
            android:id="@+id/tv_frag_record_beizhu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="添加备注"
            android:layout_toLeftOf="@id/tv_frag_record_time"
            android:padding="10dp"/>
    </RelativeLayout>
</RelativeLayout>
