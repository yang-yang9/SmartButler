<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_flashlight_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"><!---->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="100dp">
        <ImageView
            android:id="@+id/iv_ui_to_flashlight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:onClick="onClick_ToFlashlight"
            android:src="@drawable/main_flashlight" />
        <ImageView
            android:id="@+id/iv_ui_to_warning_light"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:onClick="onClick_ToWarningLight"
            android:src="@drawable/main_warning_light" />
        <ImageView
            android:id="@+id/iv_ui_to_morse"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:onClick="onClick_ToMorse"
            android:src="@drawable/main_morse" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_ui_to_bulb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:onClick="onClick_ToBulb"
            android:src="@drawable/main_bulb"
            android:padding="35dp"/>
        <!--<ImageView
            android:id="@+id/iv_ui_to_color"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:onClick="onClick_ToColor"
            android:src="@drawable/main_color"
            android:visibility="invisible"/>-->
        <ImageView
            android:id="@+id/iv_ui_to_police_light"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:onClick="onClick_ToPoliceLight"
            android:src="@drawable/main_police_light"
            android:padding="35dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:src="@drawable/main_flashlight"
            android:visibility="invisible"/>
        <ImageView
            android:id="@+id/iv_ui_to_setting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:src="@drawable/main_settings"
            android:visibility="invisible"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:src="@drawable/main_morse"
            android:visibility="invisible"/>

    </LinearLayout>

</LinearLayout>