<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv_wechat_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="长治长子丹朱镇：用心学党史  为民办实事"
            android:textSize="20sp"
            android:textColor="@color/color_black"
            android:lineSpacingMultiplier="1.3"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            <TextView
                android:id="@+id/tv_wechat_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="长治学习平台"
                android:textSize="13sp"/>
            <TextView
                android:id="@+id/tv_wechat_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2021-05-02"
                android:textSize="13sp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

    </LinearLayout>

    <!--<ImageView
        android:id="@+id/iv_wechat_item_img"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"/>-->
    <com.yangyang.smartbutler.weight.RoundCornerImageView
        android:id="@+id/iv_wechat_item_img"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        app:left_top_radius="10dp"
        app:left_bottom_radius="10dp"
        app:right_bottom_radius="10dp"
        app:right_top_radius="10dp"
        android:scaleType="centerCrop"/>

</LinearLayout>